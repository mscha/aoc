#!/usr/bin/env raku

sub differences(@val) { @val[1..*] Z- @val }

sub next-value(*@val)
{
    my @diff = differences(@val);
    if all(@diff) == 0 {
        return @val.tail;
    }
    else {
        return @val.tail + next-value(@diff);
    }
}

say next-value(0,3,6,9,12,15);
say next-value(1,3,6,10,15,21);
say next-value(10,13,16,21,30,45);
