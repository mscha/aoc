#!/usr/bin/env raku

class Person
{
    has Str $.first-name;
    has Str $.last-name;

    method Str { "$!first-name $!last-name" }
    method gist { "$!first-name $!last-name" }
}

multi sub infix:<cmp>(Person $p, Person $q)
{
    return $p.last-name cmp $q.last-name && $p.first-name cmp $q.last-name;
}

my @people = Person.new(:first-name<Michael>, :last-name<Schaap>),
             Person.new(:first-name<John>, :last-name<Doe>),
             Person.new(:first-name<Jane>, :last-name<Smith>);

.say for @people.sort;
say '';
.say for @people.sort(&infix:<cmp>);
